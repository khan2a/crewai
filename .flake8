[flake8]
max-line-length = 160
extend-ignore = E203, W503
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,venv
max-complexity = 26
inline-quotes = double
multiline-quotes = double
docstring-quotes = double
format = pylint
application-import-names = agents,test
import-order-style = google
[isort]
profile = black
line_length = 160
multi_line_output = 3
include_trailing_comma = true
force_grid_wrap = 0
use_parentheses = true
ensure_newline_before_comments = true
known_first_party = agents,test
known_third_party = pytest,pytest_asyncio,openai,langchain,pydantic,dotenv
default_section = THIRDPARTY
skip = .git,__pycache__,docs/source/conf.py,old,build,dist,venv
[tool:pytest]
addopts = -ra -q
testpaths = tests
asyncio_mode = auto
filterwarnings =
    ignore::UserWarning
    ignore::DeprecationWarning
[coverage:run]
branch = True
source = agents
[coverage:report]
show_missing = True
skip_covered = True
precision = 2
fail_under = 90